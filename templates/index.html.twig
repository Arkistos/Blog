{% extends "base.html.twig" %}

{% block title %}
	Les Articles
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-around">
			{% for post in listPosts %}
				<div class="col-md-3 col-sm-5 col-xs-10 boxPost overflow-hidden">
					<p class="text-center">{{ post.date|date('Y-m-d') }}</p>
					<h4 class="text-center"><a href="/post/{{post.id}}">{{ post.title}}</a></h4>
					<p class="text-center">{{ post.content}}</p>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}