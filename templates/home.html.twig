{% extends "base.html.twig" %}

{% block stylesheets %}
	{{ parent()}}
{% endblock %}

{% block title %}
	Home Sweet Home
{% endblock %}

{% block titlePage%}
		<h1>L'impréssionniste</h1>
		<h2>Le dévellopeur du dimanche</h2>
{% endblock %}

{% block body %}
	<div class="lastPost">
		<div class="container">
			<div class="row justify-content-around">
				{% for post in listLastPosts %}
					<a href="/post/print/{{post.id}}"class="col-md-3 col-sm-6 col-12 boxPost overflow-hidden" style="background-image:url('{{asset(post.image)}}')">
						<p class="text-center">{{ post.date|date('Y-m-d') }}</p>
						<h4 class="text-center">{{ post.title}}</h4>
						<p class="text-center">{{ post.1 }} ...</p>
					</a>
				{% endfor %}
			</div>
			<div class="row justify-content-end">
				<a href="/post/index"><h2>Plus de post</h2></a>
			</div>
		</div>
	</div>
{% endblock %}